<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixelduke.samples.transit.sampler.SamplerSliderController">
<VBox>
    <Label layoutX="43.0" layoutY="20.0" styleClass="header" text="Slider" />

   <BorderPane prefHeight="38.0" prefWidth="710.0">
      <right>
         <Button fx:id="changeThemeButton" focusTraversable="false" mnemonicParsing="false" onAction="#onStyleChange" BorderPane.alignment="CENTER">
            <graphic>
               <ImageView pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@icons8-moon-symbol-16.png" />
                  </image>
               </ImageView>
            </graphic></Button>
      </right>
   </BorderPane>
   <Label fx:id="normalHorizontalSliderLabel" styleClass="body-text" wrapText="true">
      <VBox.margin>
         <Insets top="30" bottom="30.0" />
      </VBox.margin>
   </Label>

      <Label styleClass="header4" text="Normal Without Value Popup" wrapText="true" />
      <BorderPane prefWidth="200.0" styleClass="control-container">
         <left>
            <VBox styleClass="inner-container">
               <children>
                  <Slider fx:id="normalHorizontalSlider" value="40" />
               </children>
            </VBox>
         </left>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </BorderPane>
   <Label styleClass="header4" text="Normal With Value Popup (Default)" wrapText="true" />
   <BorderPane prefWidth="200.0" styleClass="control-container">
      <left>
         <VBox styleClass="inner-container">
            <children>
               <Slider value="40" />
            </children>
         </VBox>
      </left>
      <VBox.margin>
         <Insets bottom="40.0" />
      </VBox.margin>
      </BorderPane>
      <Label styleClass="header4" text="Vertical Slider" />
      <BorderPane prefWidth="200.0" styleClass="control-container">
         <left>
            <VBox styleClass="inner-container" BorderPane.alignment="CENTER">
               <children>
                  <Slider orientation="VERTICAL" value="40" />
               </children>
            </VBox>
         </left>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </BorderPane>
      <Label styleClass="header4" text="Disabled" />
      <BorderPane prefWidth="200.0" styleClass="control-container">
         <left>
            <VBox styleClass="inner-container" BorderPane.alignment="CENTER">
               <children>
                  <Slider disable="true" value="40" />
               </children>
            </VBox>
         </left>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </BorderPane>

   <padding>
      <Insets bottom="60.0" right="60.0" />
   </padding>
</VBox>
</ScrollPane>
