<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixelduke.samples.transit.sampler.SamplerBaseController">
<VBox>
    <Label layoutX="43.0" layoutY="20.0" styleClass="header" text="ComboBox" />
   <BorderPane prefHeight="38.0" prefWidth="710.0">
      <right>
         <Button fx:id="changeThemeButton" focusTraversable="false" mnemonicParsing="false" onAction="#onStyleChange" BorderPane.alignment="CENTER">
            <graphic>
               <ImageView pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@icons8-moon-symbol-16.png" />
                  </image>
               </ImageView>
            </graphic></Button>
      </right>
   </BorderPane>
    <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="130.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="200.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <StackPane prefHeight="30.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.hgrow="NEVER" GridPane.rowIndex="1">
               <styleClass>
                  <String fx:value="sampler-odd-rows" />
                  <String fx:value="top-row" />
               </styleClass></StackPane>
         <StackPane prefHeight="150.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.hgrow="NEVER" GridPane.rowIndex="3">
               <styleClass>
                  <String fx:value="sampler-odd-rows" />
                  <String fx:value="bottom-row" />
               </styleClass></StackPane>
            <StackPane prefHeight="150.0" prefWidth="400.0" styleClass="row" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" />

                <ComboBox focusTraversable="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Times New Roman" />
                            <String fx:value="Open Sans" />
                            <String fx:value="Comic Sans" />
                            <String fx:value="Helvetica" />
                            <String fx:value="Roboto" />
                            <String fx:value="Segoe UI" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="Times New Roman" />
                    </value>
                </ComboBox>
                <ComboBox disable="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Times New Roman" />
                            <String fx:value="Open Sans" />
                            <String fx:value="Comic Sans" />
                            <String fx:value="Helvetica" />
                            <String fx:value="Roboto" />
                            <String fx:value="Segoe UI" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="Times New Roman" />
                    </value>
                </ComboBox>
                <ComboBox GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Times New Roman" />
                            <String fx:value="Open Sans" />
                            <String fx:value="Comic Sans" />
                            <String fx:value="Helvetica" />
                            <String fx:value="Roboto" />
                            <String fx:value="Segoe UI" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="Times New Roman" />
                    </value>
                </ComboBox>

            <Label styleClass="grid-label" text="Focus disabled:" GridPane.rowIndex="1" />
            <Label styleClass="grid-label" text="Focus enabled:" GridPane.rowIndex="2" />
            <Label styleClass="grid-label" text="Disabled:" GridPane.rowIndex="3" />
    </GridPane>
   <padding>
      <Insets bottom="60.0" right="60.0" />
   </padding>
</VBox>
</ScrollPane>
