<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pixelduke.samples.transit.sampler.SamplerTooltipController">
<VBox>
    <Label layoutX="43.0" layoutY="20.0" styleClass="header" text="Tooltip" />

   <BorderPane prefHeight="38.0" prefWidth="710.0">
      <right>
         <Button fx:id="changeThemeButton" focusTraversable="false" mnemonicParsing="false" onAction="#onStyleChange" BorderPane.alignment="CENTER">
            <graphic>
               <ImageView pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@icons8-moon-symbol-16.png" />
                  </image>
               </ImageView>
            </graphic></Button>
      </right>
   </BorderPane>

  <Label styleClass="header4" text="Simple Inline Tooltip" wrapText="true" />
  <BorderPane prefWidth="200.0" styleClass="control-container">
     <left>
        <VBox styleClass="inner-container">
               <children>
                  <Button mnemonicParsing="false" text="Hover over me">
                     <tooltip>
                        <Tooltip text="This is a simple Tooltip." />
                     </tooltip>
                  </Button>
               </children>
        </VBox>
     </left>
     <VBox.margin>
        <Insets bottom="40.0" />
     </VBox.margin>
  </BorderPane>

   <Label styleClass="header4" text="Multi-line Tooltip" wrapText="true" />
   <BorderPane prefWidth="200.0" styleClass="control-container">
      <left>
         <VBox styleClass="inner-container">
               <children>
                  <Button mnemonicParsing="false" text="Hover over me">
                     <tooltip>
                        <Tooltip fx:id="multilineTooltip" text="This is a \n multiline Tooltip." />
                     </tooltip>
                  </Button>
               </children>
         </VBox>
      </left>
      <VBox.margin>
         <Insets bottom="40.0" />
      </VBox.margin>
  </BorderPane>

    <Label styleClass="header4" text="Tooltip With Graphic" wrapText="true" />
    <BorderPane prefWidth="200.0" styleClass="control-container">
        <left>
            <VBox styleClass="inner-container">
               <children>
                  <Button mnemonicParsing="false" text="Hover over me">
                     <tooltip>
                        <Tooltip fx:id="tooltipWithGraphic" >
                            <graphic>
                                <ImageView pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons8-hand-cursor-32.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Tooltip>
                     </tooltip>
                  </Button>
               </children>
            </VBox>
        </left>
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin>
    </BorderPane>

   <padding>
      <Insets bottom="60.0" right="60.0" />
   </padding>
</VBox>
</ScrollPane>
